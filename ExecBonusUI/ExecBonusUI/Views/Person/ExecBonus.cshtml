@model ExecBonusUI.Models.Person

@{
    ViewBag.Title = "ExecBonus";
}

<h2>ExecBonus</h2>

<body>

    <div id="datePickerPosition">
        <div class="container">
            <div class="hero-unit">
                <div class="input-daterange" id="datepicker" data-date-format="yyyy-mm-dd">
                    <p>
                        Dates from:
                        <input type="text" class="input-small" name="start" />
                        <span id="datePickerSpan" style="vertical-align: top;  height:20px; color:blue">to</span>
                        <input type="text" class="input-small" name="end" />
                        <button type="button" class="btn btn-primary">Search Date</button>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <table id="example" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.listOfPersons)
            {
                <tr>
                    <td>@item.ID</td>

                    <td>@item.FirstName</td>

                    <td>@item.LastName</td>

                    <td>@item.Address</td>

                    <td>@item.Date</td>
                </tr>
            }
        </tbody>
    </table>
</body>
